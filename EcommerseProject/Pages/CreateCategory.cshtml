@page
@model CreateCategoryModel

@{
    ViewData["Title"] = "CreateCategory";
}



<div class="center-form-container">
    <form class="createCategory-form" method="post">
        <h1><i class="fas fa-plus-circle"></i> Create Category</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Category.Description" class="control-label"><i class="fas fa-file-alt"></i> Description</label>
            <input asp-for="Category.Description" class="form-control" />
            <span asp-validation-for="Category.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category.CategoryName" class="control-label"><i class="fas fa-tag"></i> Category Name</label>
            <input asp-for="Category.CategoryName" class="form-control" />
            <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button style="background-color: darkblue; color: white;" type="submit" class="buttons btn btn-primary"><i class="fas fa-check"></i> Create</button>
        </div>
        <div>
            <a style="background-color: darkcyan; color: white;" asp-page="Index" class="buttons btn"><i class=" fas fa-arrow-left"></i> Back</a>
        </div>

    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

