@page
@model EcommerseProject.Pages.DeleteCarModel

@{
    ViewData["Title"] = "DeleteCar";
}
<h1>Are you sure you want to delete this?</h1>
<a style="block-size:50px;font-size:25px" class="btn buttons"  asp-page="Index"><i class="fas fa-arrow-left"></i> Back</a>
<body class="background-section">
    <div class="details-container">
        <img src="@Model.Car.CarPhoto" alt="Car Photo" />
        <p> <strong>Model: @Html.DisplayFor(modelItem => modelItem.Car.Model)</strong></p>
        <form method="post">
            <input type="hidden" asp-for="Car.Id" />
            <span class="form-group">
                <input style="block-size:50px;font-size:25px;" type="submit" value="Delete" class="btn-danger btn delete-submit" />
            </span>
        </form>
    </div>
</body>

